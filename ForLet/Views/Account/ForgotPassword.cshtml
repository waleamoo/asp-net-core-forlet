@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="section-title mt-2">
            <h2>Reset Your Password </h2>
            <p>Fill in your email at registration.</p>
        </div>

        <div class="row">

            <div class="col-lg-8 mt-5 mt-lg-0">
                @if (Model?.EmailSent == true)
                {
                    <div class="alert alert-success" role="alert">
                        <p>
                            If you are registered with us and you set an email at registration, we have sent an email on your registered email address.
                        </p>
                    </div>
                }
                else
                {
                    <p>Forgot your password? No worries you can reset it easily.</p>
                    <form asp-action="ForgotPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Continue" class="btn btn-primary" />
                        </div>
                    </form>
                }
                <div>
                    <p><a asp-action="Login" asp-controller="Account">Back to Login</a></p>
                </div>
            </div>

            <partial name="_sidebarPartial" />

        </div>
    </div>
</section><!-- End Contact Section -->

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}