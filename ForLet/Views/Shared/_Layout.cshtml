<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - ForLet</title>
    <meta content="ForLet is your one stop for home rentage and lease for long & short term." name="description">
    <meta content="Forlet,Home for rent,Shortlet rentals,Single room for rent,self-contain for rent,room and parlour for rent" name="keywords">
    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/remixicon/remixicon.css" rel="stylesheet" />
    <link href="~/assets/venobox/venobox.css" rel="stylesheet" />
    <link href="~/assets/owl.carousel/assets/owl.carousel.css" rel="stylesheet" />
    <link href="~/assets/icofont/icofont.min.css" rel="stylesheet" />
    <link href="~/assets/boxicons/css/boxicons.css" rel="stylesheet" />
    <!-- Template Main CSS File -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo mr-auto"><a asp-area="" asp-controller="Home" asp-action="Index">ForLet</a></h1>
            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    @if (User?.Identity?.IsAuthenticated ?? true)
                    {
                        <li><a asp-controller="Home" asp-action="QuickPost">Quick Post</a></li>
                        <li><a href="#">For Sale</a></li>
                        <li><a href="#">Artisans</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ">FAQ</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    }
                </ul>
            </nav><!-- .nav-menu -->
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <div class="dropdown show">
                    <a class="get-started-btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Hello @await Component.InvokeAsync("FirstName") 
                        <img src="~/Media/Users/@(User.FindFirst("UserAvatar").Value == null ? "noimage.jpg" : User.FindFirst("UserAvatar").Value)" width="30" height="30" style="border-radius: 50%;" />
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="#">My Ads</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">Edit Profile</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Messages">Messages</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Rental">Post Rental</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Rentals">My Rental Ads</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="ShortLetRental">Post Shortlet Rental</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">My Shortlet Ads</a>
                        <a class="dropdown-item" href="#">Billing</a>
                        <a class="dropdown-item" href="#">Become an artisan</a>
                        @if (User.IsInRole("admin"))
                        {
                            <a class="dropdown-item text-success" asp-area="Admin" target="_blank" asp-controller="Rental" asp-action="Index">Admin Area</a>
                        }
                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                    </div>
                </div>
            }
            else
            {
                <div class="dropdown show">
                    <a class="get-started-btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Register/Login
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a>
                    </div>
                </div>
            }
        </div>
    </header><!-- End Header -->

    <main id="main">

        @RenderBody()
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>ForLet</h3>
                        <p>
                            A108 Adam Street <br>
                            New York, NY 535022<br>
                            United States <br><br>
                            <strong>Phone:</strong> +1 5589 55488 55<br>
                            <strong>Email:</strong> hello@forlet.com.ng<br>
                        </p>
                    </div>

                    <div class="col-lg-2 col-md-6 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Home</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">About us</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Services</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Terms of service</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Privacy policy</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Our Services</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Web Design</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Web Development</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Product Management</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Marketing</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="#">Graphic Design</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-6 footer-newsletter">
                        <h4>Join Our Newsletter</h4>
                        <p>Tamen quem nulla quae legam multos aute sint culpa legam noster magna</p>
                        <form action="" method="post">
                            <input type="email" name="email"><input type="submit" value="Subscribe">
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="container d-md-flex py-4">

            <div class="mr-md-auto text-center text-md-left">
                <div class="copyright">
                    &copy; Copyright @DateTime.Now.Year.ToString()  <strong><span>ForLet</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    Designed by <a href="https://techqwerty.com/">Tech Qwerty</a>
                </div>
            </div>
            <div class="social-links text-center text-md-right pt-3 pt-md-0">
                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top"><i class="ri-arrow-up-line"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @*<script src="~/assets/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/assets/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/assets/venobox/venobox.js"></script>*@
    <script src="~/assets/owl.carousel/owl.carousel.js"></script>
    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>
    <script src="~/js/jquery.inputmask.min.js"></script>
    <script src="~/js/inputmask.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
