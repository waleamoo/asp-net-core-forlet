@model IEnumerable<Rental>

@using ForLet.Models;

@{
    ViewData["Title"] = "Rentals";
}

<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="row">

            <div class="col-lg-12 mt-5 mt-lg-0">

                <p class="pt-5">
                    <a asp-action="Create">Create New Rental</a>
                </p>

                <table class="table table-responsive-lg table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Property Type
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Rent
                            </th>
                            <th>
                                Date Posted
                            </th>
                            <th>
                                Phone Number
                            </th>
                            <th>
                                L.G.A
                            </th>
                            <th>
                                State
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.propertyType.PropertyName
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RentalAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rent)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.DatePosted)
                                </td>
                                <td>
                                    @item.Client.PhoneNumber
                                </td>
                                <td>
                                    @item.lga.LGAName
                                </td>
                                <td>
                                    @item.state.StateName
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>

    </div>
</section><!-- End Contact Section -->