<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - ForLet</title>
    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
          rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/remixicon/remixicon.css" rel="stylesheet" />
    <link href="~/assets/venobox/venobox.css" rel="stylesheet" />
    <link href="~/assets/owl.carousel/assets/owl.carousel.css" rel="stylesheet" />
    <link href="~/assets/icofont/icofont.min.css" rel="stylesheet" />
    <link href="~/assets/boxicons/css/boxicons.css" rel="stylesheet" />
    <!-- Template Main CSS File -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">

            <h1 class="logo mr-auto"><a href="/">ForLet</a></h1>
            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li><a asp-area="Admin" asp-controller="Rental" asp-action="Index">Rental</a></li>
                    <li><a asp-area="Admin" asp-controller="Rental" asp-action="Index">User</a></li>
                </ul>
            </nav><!-- .nav-menu -->
           
            <div class="dropdown show">
                <a class="get-started-btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Hello Admin,
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Profile">Profile</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Rentals">Rentals</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Messages">Messages</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="Rental">Post Rental</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Account" asp-action="ShortLetRental">Post Shortlet Rental</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Rental" asp-action="Logout">Logout</a>
                </div>
            </div>
        </div>
    </header><!-- End Header -->

    <main id="main">
        @RenderBody()
    </main><!-- End #main -->

    <a href="#" class="back-to-top"><i class="ri-arrow-up-line"></i></a>
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/assets/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/assets/waypoints/jquery.waypoints.min.js"></script>
    <script src="~/assets/venobox/venobox.js"></script>
    <script src="~/assets/owl.carousel/owl.carousel.js"></script>
    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>
    <script src="~/js/jquery.inputmask.min.js"></script>
    <script src="~/js/inputmask.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
