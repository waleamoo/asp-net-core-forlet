@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">
        <div class="row">
            <div class="col-lg-12 mt-5 mt-lg-0">
                <partial name="_NotificationPartial" />
                <p class="pt-5 section-title mt-2">
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Create">Create New Roles</a>
                </p>
                @if (Model.Count() > 0)
                {
                    <h1>All Roles</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Role</th>
                                <th>Users</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Id</td>
                                    <td>@role.Name</td>
                                    <td users="@role.Id"></td>
                                    <td>
                                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                                        <a class="confirmDeletion" asp-area="Admin" asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                }
                else
                {
                    <div class="section-title mt-2">
                        <h2>Sorry, we could not find any roles.</h2>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
